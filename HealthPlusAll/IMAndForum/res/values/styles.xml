<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="Content">
        <item name="android:background">#FBFBFB</item>
    </style>
    
    <style name="hp_w_header_title">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textColor">@color/hp_w_header_view_white</item>
        <item name="android:shadowColor">#7f000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="ChatMessageThemeDefaultReceiveBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="ChatMessageThemeDefaultReceiveTime" parent="ChatMessageThemeDefaultReceiveBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="ChatMessageThemeDefaultReceiveContent" parent="ChatMessageThemeDefaultReceiveBase">
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="ChatMessageThemeDefaultSendBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#222222</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="ChatMessageThemeDefaultSendContent" parent="ChatMessageThemeDefaultSendBase">
        <item name="android:textSize">16sp</item>
    </style>

</resources>
