<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backcolor"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:background="@color/titleback" >

        <TextView
            android:id="@+id/textLocalSongs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/title_list"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ImageView
            android:id="@+id/imgLocalReturn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/list_left" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/titlesubback_local" >

        <ImageView
            android:id="@+id/imgAll_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/list_playall" />

        
	</RelativeLayout>
	
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
	    <ListView
	        android:id="@+id/listLocalSongs"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_above="@+id/rlLocalInclude"
	        android:background="@color/listbackcolor"
	        android:cacheColorHint="#00000000"
	        android:divider="@null"
        	android:dividerHeight="0dp"
	        android:listSelector="@drawable/listitem_bg"
	        android:fadingEdge="none" >
	   </ListView>
	
	   	        
		<RelativeLayout
	        android:id="@+id/rlLocalInclude"
	        android:layout_width="match_parent"
	        android:layout_height="64dp" 
	        android:layout_alignParentBottom="true"
	        android:layout_alignParentLeft="true">
		
	
	    <include
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        layout="@layout/ting_playpanel" />
		</RelativeLayout>
	</RelativeLayout>

</LinearLayout>