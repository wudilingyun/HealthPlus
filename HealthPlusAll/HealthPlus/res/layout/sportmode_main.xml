<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/main_totaldistance_bg"
            android:orientation="vertical" >

          
            <RelativeLayout
                android:id="@+id/toplayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-5dp" >

             <com.vee.healthplus.widget.ShadowTextView
    
                    android:id="@+id/distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="00.00"
                    android:textColor="@color/hp_font_darkblack"
                    android:textSize="98sp"
                    android:textStyle="normal" />

                <TextView
                    style="@style/txt_shadow"
                    android:id="@+id/distanceunit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/distance"
                    android:layout_alignBottom="@+id/distance"
                    android:layout_gravity="center_vertical"
                    android:layout_toRightOf="@+id/distance"
                    android:text="@string/sportmode_kilometer"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/hp_font_middle" />

                 <TextView
                     android:id="@+id/TextView02"
                     style="@style/txt_shadow"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignBaseline="@+id/distance"
                     android:layout_alignBottom="@+id/distance"
                     android:layout_toLeftOf="@+id/distance"
                     android:text="总里数"
                     android:textColor="@color/little_little_gray"
                     android:textSize="@dimen/hp_font_result_3" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/midlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toplayout"
                android:background="@drawable/hp_main__middle_item_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingTop="6dp" >

                <include
                    android:id="@+id/calory"
                    layout="@layout/sportmode_middle_item" />

                <include
                    android:id="@+id/duration"
                    layout="@layout/sportmode_middle_item" />

                <include
                    android:id="@+id/count"
                    layout="@layout/sportmode_middle_item" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/main_achievement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="26dp"
            android:layout_marginTop="@dimen/achievement_shorcut_top"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" >

            <LinearLayout
                android:id="@+id/ll_last"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/lastSportTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:gravity="center_vertical"
                    android:text="完成最后一次运动在2013-12-01"
                    android:textColor="@color/little_little_gray"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/lastSportDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="上次运动距离"
                    android:textColor="@color/little_little_gray"
                    android:textSize="12sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/last_sport_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/imageToRight"
                android:layout_toRightOf="@+id/ll_last"
                android:src="@drawable/main_bike_imge" />

            <ImageView
                android:id="@+id/imageToRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:paddingRight="5dp"
                android:src="@drawable/youjiantou" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bottomlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/midlayout"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/btnGo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="16dp"
                android:src="@drawable/start_btn_selector" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/btnGo"
                android:background="@color/white"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:background="@color/hp_w_line_lv" />

                <include
                    android:id="@+id/mode"
                    layout="@layout/sportmode_bottom_item" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/hp_w_line_lv" />

                <include
                    android:id="@+id/sporttype"
                    layout="@layout/sportmode_bottom_item" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/hp_w_line_lv" />

                <include
                    android:id="@+id/mood"
                    layout="@layout/sportmode_bottom_item"
                    android:visibility="gone" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</ScrollView>