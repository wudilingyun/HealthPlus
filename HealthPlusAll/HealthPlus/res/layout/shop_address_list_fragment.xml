<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.ScrollView"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/address_no"
            style="@style/TextAppearance.Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/shop_address_no"
            android:textSize="@dimen/text_size_normal"
            android:visibility="gone" />

        <ListView
            android:id="@+id/address_listfragment_listview"
            style="@style/Widget.ListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>

        <RelativeLayout
            android:id="@+id/add_address_bottom"
            style="@style/Widget.Item.ListView.SingleLine"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:background="@drawable/shop_list_item_single_bg_top_margin"
            android:visibility="invisible" >

            <TextView
                android:id="@+id/checkout_address_bottom"
                style="@style/TextAppearance.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:shadowColor="@color/primary_text_color_shadow"
                android:text="@string/shop_checkout_add_address" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="18.0dip"
                android:layout_marginTop="3.0dip"
                android:clickable="false"
                android:focusable="false"
                android:src="@drawable/shop_btn_next" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>