<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/analysis_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/analysis_chart"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/analysis_chart"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/analysis_bt_preweek"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:clickable="true"
            android:scaleType="center"
            android:contentDescription="@string/app_name"
            android:src="@drawable/analysis_pre_bt_selector" />

        <TextView
            android:id="@+id/analysis_week_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/analysis_text_colorful"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/analysis_bt_nextweek"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:clickable="false"
            android:contentDescription="@string/app_name"
            android:scaleType="center"
            android:src="@drawable/analysis_next_bt_selector" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/analysis_divid_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignLeft="@+id/analysis_chart"
        android:layout_alignRight="@+id/analysis_chart"
        android:layout_below="@+id/analysis_top_bar"
        android:layout_marginTop="10dp"
        android:background="@color/analysis_text_colorful" />

    <RelativeLayout
        android:id="@+id/analysis_highlow_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/analysis_chart"
        android:layout_alignRight="@+id/analysis_chart"
        android:layout_below="@+id/analysis_divid_line"
        android:layout_marginTop="10dp" >

        <LinearLayout
            android:id="@+id/analysis_high_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/analysis_high_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/analysis_record_high"
                android:textColor="@color/analysis_text_dark"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/analysis_value_high"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/analysis_record_high"
                android:textColor="@color/analysis_text_colorful"
                android:textSize="16sp"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/analysis_low_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/analysis_record_low"
                android:textColor="@color/analysis_text_dark"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/analysis_value_low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/analysis_record_low"
                android:textColor="@color/analysis_text_colorful"
                android:textSize="16sp"
                android:visibility="invisible" />
        </LinearLayout>
    </RelativeLayout>

    <com.vee.healthplus.widget.fancychart.FancyChart
        android:id="@+id/analysis_chart"
        style="@style/CustomFancyChart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/analysis_bottom_bar"
        android:layout_below="@+id/analysis_highlow_bar"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:id="@+id/analysis_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/analysis_bottom_bg"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <Gallery
                android:id="@+id/analysis_type_gallery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/analysis_type_arrow"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="-10dp"
                android:scrollbars="none"
                android:spacing="10dp" />

            <ImageView
                android:id="@+id/analysis_type_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/analysis_bottom_down_arrow" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/analysis_bottom_title_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textColor="@color/analysis_text_light"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/analysis_bottom_title_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textColor="@color/analysis_text_dark"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/analysis_bottom_title_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textColor="@color/analysis_text_light"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>