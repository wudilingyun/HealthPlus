<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/achievement_calendar_selector_backgroud">

    <TextView
        android:id="@+id/btPick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:textSize="20sp"
        android:textColor="@color/hp_font_midblack"
        android:text="完成" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btPick"
        android:orientation="horizontal"
        android:background="@drawable/achievement_calendar_selector_divider">

        <kankan.wheel.widget.WheelView
            android:id="@+id/date_year"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null" />

        <kankan.wheel.widget.WheelView
            android:id="@+id/date_month"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null" />
    </LinearLayout>

</RelativeLayout>