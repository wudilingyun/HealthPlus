<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/achievement_info_item"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/relative"
        android:gravity="bottom">

        <ImageView
            android:id="@+id/item_icon"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/tab_sport_selected" />

        <TextView
            android:id="@+id/info_time"
            android:layout_toRightOf="@+id/item_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:text="10月1日 10:00"
            android:textColor="@color/blue"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="-3dp"/>

        <TextView
            android:id="@+id/info_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="普通运动"
            android:textColor="@color/blue"
            android:textSize="15sp"
            android:visibility="gone" />
    </RelativeLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:id="@+id/table">

        <TableRow>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="用时"
                android:textColor="@color/hp_w_target_titledes"
                android:textSize="13sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="距离"
                android:textColor="@color/hp_w_target_titledes"
                android:textSize="13sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="燃烧"
                android:textColor="@color/hp_w_target_titledes"
                android:textSize="13sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="均速"
                android:textColor="@color/hp_w_target_titledes"
                android:textSize="13sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="心率"
                android:textColor="@color/hp_w_target_titledes"
                android:textSize="13sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/info_item_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="01&apos;16"
                android:textColor="@color/black_black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/info_item_distance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="01&apos;16"
                android:textColor="@color/black_black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/info_item_calor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="01&apos;16"
                android:textColor="@color/black_black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/info_item_speed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="01&apos;16"
                android:textColor="@color/black_black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/info_item_heart_rate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="01&apos;16"
                android:textColor="@color/black_black"
                android:textSize="18sp"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/line"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="@color/hp_w_line_lv" />
</LinearLayout>