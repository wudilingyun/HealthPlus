<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <!-- style="@style/Widget.Item.ListView.SingleLine" -->

    <ImageView
        android:id="@+id/user_list_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15.0dip"
        android:layout_marginLeft="15dp"
        android:adjustViewBounds="true"
        android:clickable="false"
        android:focusable="false"
        android:src="@drawable/shop_search_order_icon" />

    <TextView
        android:id="@+id/user_list_item_text"
        style="@style/TextAppearance.List.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/user_list_item_icon"
        android:text="@string/shop_account_orderlist"
        android:textSize="@dimen/text_size_medium" />

    <ImageView
        android:id="@+id/user_list_item_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:clickable="false"
        android:focusable="false"
        android:scaleType="centerInside"
        android:src="@drawable/shop_btn_next" />

</RelativeLayout>