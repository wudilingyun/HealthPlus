<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white"
    android:orientation="vertical"
    android:padding="@dimen/health_main_padding_little" >

    <TextView
        android:id="@+id/txt_exam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="123"
        android:textColor="@drawable/black"
        android:paddingLeft="@dimen/hp_main_padding_big"
        android:textSize="@dimen/health_textsize_1" >
    </TextView>

    <ImageView
        android:id="@+id/img_expand_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
         android:layout_centerVertical="true"
         android:layout_marginRight="5.0dip"
        android:background="@drawable/health_exam_arrows" >
    </ImageView>

</RelativeLayout>