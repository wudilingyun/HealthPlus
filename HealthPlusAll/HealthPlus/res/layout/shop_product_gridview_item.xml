<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shop_category_item_bg" >

    <ImageView
        android:id="@+id/shop_product_gridview_item_pic"
        android:layout_width="@dimen/product_photo_size"
        android:layout_height="@dimen/product_photo_size"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5.0dip"
        android:layout_marginRight="5.0dip"
        android:layout_marginTop="5.0dip"
        android:clickable="false"
        android:focusable="false"
        android:contentDescription="@null"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/shop_product_gridview_item_name"
        style="@style/TextAppearance.List.Primary"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/shop_product_gridview_item_pic"
        android:layout_marginTop="5.0dip"
        android:ellipsize="end"
        android:gravity="left"
        android:paddingLeft="8dp"
        android:singleLine="true" />

    <TextView
        android:id="@+id/shop_product_gridview_item_price"
        style="@style/TextAppearance.List.Primary"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/shop_product_gridview_item_name"
        android:layout_marginTop="2.0dip"
        android:ellipsize="end"
        android:gravity="left"
        android:paddingLeft="8dp"
        android:singleLine="true" />

</RelativeLayout>