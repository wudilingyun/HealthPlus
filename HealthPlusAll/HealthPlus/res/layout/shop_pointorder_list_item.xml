<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.Item.ListView.TrebleLine"
    android:background="@drawable/shop_order_view_body"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="0.0dip"
    android:paddingLeft="5.0dip"
    android:paddingRight="15.0dip"
    android:paddingTop="0.0dip" >

    <include
        android:id="@+id/action_divider"
        layout="@layout/shop_horizontal_divider" />

    <LinearLayout
        style="@style/Widget.Item.ListView.TrebleLine"
        android:orientation="horizontal" >
        
    <ImageView
        android:id="@+id/product_photo"
        android:layout_width="@dimen/list_icon_size"
        android:layout_height="@dimen/list_icon_size"
        android:clickable="false"
        android:focusable="false"
        android:padding="5dp"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2.0dip"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/product_title"
            style="@style/TextAppearance.List.Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:id="@+id/product_detail"
            style="@style/TextAppearance.List.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_normal" />
    </LinearLayout>
        
    </LinearLayout>

</LinearLayout>