<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >
                        
            
           <SeekBar
                android:id="@+id/panel_music_seekBar"
                android:layout_width="422px"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:progressDrawable="@drawable/progressbar_img"
                android:progress="0"
                android:secondaryProgress="0"
                android:thumb="@drawable/seekbar_button" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/panel_music_loop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/panel_circle_all" />

            <ImageView
                android:id="@+id/panel_music_provious"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/panel_provious" />

            <RelativeLayout
                android:layout_width="100px"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">
                
		        <ImageView
		            android:id="@+id/panel_music_play"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:background="@drawable/panel_play" 
		            />
		        
		        
		        <ImageView
		            android:id="@+id/panel_music_pb"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:background="@drawable/progressbar_frame"
		            android:visibility="gone"/>

            </RelativeLayout>

            <ImageView
                android:id="@+id/panel_music_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/panel_next" />

            <ImageView
                android:id="@+id/panel_music_player"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/panel_goto_player" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>