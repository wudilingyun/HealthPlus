<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white"
    android:orientation="vertical" >

    <com.baidu.mapapi.map.MapView
        android:id="@+id/path_bmapView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sport_detail"
        android:layout_alignParentTop="true"
        android:src="@drawable/hp_main_popmenu_bg"
        android:clickable="true" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@id/path_bmapView"
        android:background="@drawable/sport_path_shaow"/>
    
    <LinearLayout
        android:id="@+id/sport_detail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/sport_result_margin_bottom"
        android:layout_marginTop="@dimen/sport_result_margin_top"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/sport_result_time"
                android:textColor="@color/hp_w_target_week"
                android:textSize="@dimen/hp_font_result_3" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/sport_result_distance_margin_right"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/sport_result_distance"
                android:textColor="@color/hp_w_target_week"
                android:textSize="@dimen/hp_font_result_3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:layout_marginTop="-3dp">

            <TextView
                android:id="@+id/duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text="0&apos;0"
                android:textColor="@color/hp_w_target_title"
                android:textSize="@dimen/hp_font_result_1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|bottom"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.20"
                    android:textColor="@color/hp_w_target_title"
                    android:textSize="@dimen/hp_font_result_1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hp_main_distance_unit"
                    android:textColor="@color/hp_w_target_title"
                    android:textSize="@dimen/hp_font_result_2" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_line"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sport_result_dotted_line_margin_left"
            android:layout_marginRight="@dimen/sport_result_dotted_line_margin_right"
            android:layout_marginTop="@dimen/sport_result_dotted_line_margin_top"
            android:background="@drawable/dotted_line_bac" 
            android:orientation="horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sport_result_icons_margin_top"
            android:gravity="center|bottom"
            android:orientation="horizontal"
            android:layout_marginBottom="2dp" >

            <com.vee.healthplus.ui.sportmode.DrawableCenterTextView
                style="@style/sport_result"
                android:drawableLeft="@drawable/calorie_grayiconsmall"
                android:drawablePadding="2dp"
                android:text="@string/sport_result_burn" />

            <com.vee.healthplus.ui.sportmode.DrawableCenterTextView
                style="@style/sport_result"
                android:drawableLeft="@drawable/count_grayiconsmall"
                android:text="@string/sport_result_count" />

            <com.vee.healthplus.ui.sportmode.DrawableCenterTextView
                style="@style/sport_result"
                android:drawableLeft="@drawable/heart_grayiconsmall"
                android:text="@string/sport_result_heart" />

            <com.vee.healthplus.ui.sportmode.DrawableCenterTextView
                style="@style/sport_result"
                android:drawableLeft="@drawable/velocity_grayiconsmall"
                android:text="@string/sport_result_speed" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|bottom"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_calorie"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="12"
                android:textColor="@color/hp_w_target_title"
                android:textSize="@dimen/hp_font_middle" />

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text=""
                android:textColor="@color/hp_w_target_title"
                android:textSize="@dimen/hp_font_middle" />

            <TextView
                android:id="@+id/tv_rate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/hp_w_target_title"
                android:textSize="@dimen/hp_font_middle" />

            <TextView
                android:id="@+id/tv_speed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text=""
                android:textColor="@color/hp_w_target_title"
                android:textSize="@dimen/hp_font_middle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|bottom"
            android:orientation="horizontal"
            android:layout_marginTop="2dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/sport_result_burn_unit"
                android:textSize="@dimen/hp_font_result_3"
                android:textColor="#6c6c6c" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/sport_result_count_unit"
                android:textSize="@dimen/hp_font_result_3" 
                android:textColor="#6c6c6c" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/sport_result_heart_unit"
                android:textSize="@dimen/hp_font_result_3"
                android:textColor="#6c6c6c"  />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/sport_result_speed_unit"
                android:textSize="@dimen/hp_font_result_3"
android:textColor="#6c6c6c" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>