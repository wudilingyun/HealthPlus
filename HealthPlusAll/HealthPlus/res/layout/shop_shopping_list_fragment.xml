<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/shopping_listfragment_title"
        style="@style/TextAppearance.Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/shop_cart_button_list"
        android:textSize="@dimen/text_size_normal" />

    <ListView
        android:id="@+id/shopping_listfragment_listview"
        style="@style/Widget.ListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/shopping_listfragment_title"
        android:layout_above="@+id/shopping_listfragment_bottom" >
    </ListView>

    <RelativeLayout
        android:id="@+id/shopping_listfragment_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true" >

        <TextView
            android:id="@+id/shopping_listfragment_total"
            style="@style/TextAppearance.Huge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_medium" />

        <Button
            android:id="@+id/shopping_listfragment_goto"
            style="@style/Widget.Button.Main.Shop"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:textColor="@color/shop_primary_text"
            android:background="@drawable/hp_w_target_setbtn_selector"
            android:text="@string/shop_cart_button_checkout" />
    </RelativeLayout>

</RelativeLayout>