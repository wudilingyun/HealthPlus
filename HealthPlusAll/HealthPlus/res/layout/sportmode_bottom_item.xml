<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/sport_mode_selector_height"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="5dp"
    android:layout_weight="1">

    <TextView
        android:id="@+id/value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:textColor="@color/little_little_gray"
        android:textSize="@dimen/sport_mode_selector_value_size"
        android:layout_alignLeft="@+id/value_tv"
        android:layout_marginRight="15dp" />

    <TextView
        android:id="@+id/value_tv"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@color/hp_w_target_titledes"
        android:textSize="12sp" />
</RelativeLayout>