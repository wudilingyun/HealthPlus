<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/service_station_name_text"
            style="@style/Widget.Item.ListView.Label"
            android:textSize="@dimen/text_size_medium" />

        <RelativeLayout
            android:id="@+id/station_detail_address_item"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shop_list_item_top_bg_n"
            android:minHeight="@dimen/list_item_height_single_line"
            android:paddingBottom="@dimen/list_item_padding"
            android:paddingTop="@dimen/list_item_padding"
            android:visibility="gone" >

            <TextView
                android:id="@+id/station_detail_address_item_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingRight="10.0dip"
                android:textColor="@color/shop_primary_text"
                android:textSize="@dimen/text_size_medium" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:clickable="false"
                android:focusable="false"
                android:scaleType="centerInside"
                android:src="@drawable/shop_btn_next"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/service_station_tel_item"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shop_list_item_bottom_bg"
            android:minHeight="@dimen/list_item_height_single_line"
            android:paddingBottom="@dimen/list_item_padding"
            android:paddingTop="@dimen/list_item_padding" >

            <TextView
                android:id="@+id/station_detail_tel_item_text"
                style="@style/TextAppearance.List.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/arrow_right"
                android:paddingRight="@dimen/list_item_padding"
                android:textSize="@dimen/text_size_medium" />

            <ImageView
                android:id="@+id/arrow_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:clickable="false"
                android:focusable="false"
                android:scaleType="centerInside"
                android:src="@drawable/shop_btn_next" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>