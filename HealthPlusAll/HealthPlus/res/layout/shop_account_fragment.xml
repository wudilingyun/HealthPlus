<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingTop="10dp" >

        <LinearLayout
            android:id="@+id/account_info_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/shop_account_login_bg" />

                <LinearLayout
                    android:id="@+id/not_login"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >

                    <TextView
                        style="@style/TextAppearance.List.Primary"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/account_login_text_top_padding"
                        android:gravity="center"
                        android:text="@string/shop_login_primary_text"
                        android:textColor="@color/healthplus_text"
                        android:textSize="27.0sp" />

                    <TextView
                        style="@style/TextAppearance.List.Primary"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/shop_login_second_text"
                        android:textColor="#ffab9587"
                        android:textSize="13.0sp" />
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/already_login"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" >

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="0.5dp"
                        android:adjustViewBounds="true"
                        android:paddingLeft="0.5dp"
                        android:scaleType="fitCenter" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="25dp"
                        android:paddingTop="@dimen/account_logout_text_top_padding" >

                        <LinearLayout
                            android:id="@+id/account_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/account_user_name"
                                style="@style/TextAppearance.List.Primary"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="middle"
                                android:gravity="left"
                                android:singleLine="true"
                                android:textColor="@color/shop_primary_text"
                                android:textSize="@dimen/text_size_large" />

                            <TextView
                                style="@style/TextAppearance.List.Primary"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:text="@string/shop_welcome"
                                android:textColor="@color/shop_primary_text"
                                android:textSize="@dimen/text_size_medium" />

                            <TextView
                                style="@style/TextAppearance.List.Primary"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:text="@string/shop_exit"
                                android:textColor="@color/shop_primary_text"
                                android:textSize="@dimen/text_size_medium" />
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="9.0dip"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip"
                android:paddingTop="10.0dip" >

                <RelativeLayout
                    android:id="@+id/shop_account_order_list"
                    style="@style/Widget.Item.ListView.SingleLine"
                    android:background="@drawable/shop_list_item_top_bg" >

                    <ImageView
                        android:id="@+id/order_item_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15.0dip"
                        android:adjustViewBounds="true"
                        android:clickable="false"
                        android:focusable="false"
                        android:src="@drawable/shop_search_order_icon" />

                    <TextView
                        android:id="@+id/order_item_text"
                        style="@style/TextAppearance.List.Primary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/order_item_icon"
                        android:text="@string/shop_account_orderlist"
                        android:textSize="@dimen/text_size_medium" />

                    <ImageView
                        android:id="@+id/order_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:clickable="false"
                        android:focusable="false"
                        android:scaleType="centerInside"
                        android:src="@drawable/shop_btn_next" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/shop_account_address"
                    style="@style/Widget.Item.ListView.SingleLine"
                    android:background="@drawable/shop_list_item_middle_bg" >

                    <ImageView
                        android:id="@+id/address_item_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15.0dip"
                        android:adjustViewBounds="true"
                        android:clickable="false"
                        android:focusable="false"
                        android:src="@drawable/shop_address_icon" />

                    <TextView
                        android:id="@+id/address_item_text"
                        style="@style/TextAppearance.List.Primary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/address_item_icon"
                        android:text="@string/shop_account_address"
                        android:textSize="@dimen/text_size_medium" />

                    <ImageView
                        android:id="@+id/address_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:clickable="false"
                        android:focusable="false"
                        android:scaleType="centerInside"
                        android:src="@drawable/shop_btn_next" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/shop_account_order_edit"
                    style="@style/Widget.Item.ListView.SingleLine"
                    android:background="@drawable/shop_list_item_middle_bg"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/account_order_edit_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15.0dip"
                        android:adjustViewBounds="true"
                        android:clickable="false"
                        android:focusable="false"
                        android:src="@drawable/shop_edit_icon" />

                    <TextView
                        style="@style/TextAppearance.List.Primary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/account_order_edit_icon"
                        android:text="@string/shop_account_orderedit"
                        android:textSize="@dimen/text_size_medium" />

                    <ImageView
                        android:id="@+id/edit_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:clickable="false"
                        android:focusable="false"
                        android:scaleType="centerInside"
                        android:src="@drawable/shop_btn_next" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/shop_account_point"
                    style="@style/Widget.Item.ListView.SingleLine"
                    android:background="@drawable/shop_list_item_middle_bg" >

                    <ImageView
                        android:id="@+id/service_point_item_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15.0dip"
                        android:adjustViewBounds="true"
                        android:clickable="false"
                        android:focusable="false"
                        android:src="@drawable/shop_point_icon" />

                    <TextView
                        android:id="@+id/service_point_item_text"
                        style="@style/TextAppearance.List.Primary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/service_point_item_icon"
                        android:text="@string/shop_account_point"
                        android:textSize="@dimen/text_size_medium" />

                    <ImageView
                        android:id="@+id/service_point_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:clickable="false"
                        android:focusable="false"
                        android:scaleType="centerInside"
                        android:src="@drawable/shop_btn_next" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/shop_account_station"
                    style="@style/Widget.Item.ListView.SingleLine"
                    android:background="@drawable/shop_list_item_bottom_bg" >

                    <ImageView
                        android:id="@+id/service_station_item_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15.0dip"
                        android:adjustViewBounds="true"
                        android:clickable="false"
                        android:focusable="false"
                        android:src="@drawable/shop_hotline_icon" />

                    <TextView
                        android:id="@+id/service_station_item_text"
                        style="@style/TextAppearance.List.Primary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/service_station_item_icon"
                        android:text="@string/shop_account_hotline"
                        android:textSize="@dimen/text_size_medium" />

                    <ImageView
                        android:id="@+id/service_station_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:clickable="false"
                        android:focusable="false"
                        android:scaleType="centerInside"
                        android:src="@drawable/shop_btn_next" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>