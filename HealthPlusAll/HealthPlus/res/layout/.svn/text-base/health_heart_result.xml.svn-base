<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white"
        android:orientation="vertical" 
         android:layout_margin="@dimen/heart_marging">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/heart_marging" >

            <TextView
                android:id="@+id/heart_result_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="@string/heart_result_title"
                android:textColor="@color/hp_w_target_title"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/your_heart_resutl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/heart_result_title"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="100"
                android:textSize="15sp" />

            <Button
                android:id="@+id/close_result"
                android:layout_width="wrap_content"
                android:layout_height="45.0dip"
                android:layout_alignParentRight="true"
                android:text="关闭" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginLeft="@dimen/hp_main_padding_few"
            android:layout_marginRight="@dimen/hp_main_padding_few"
            android:background="@color/hp_w_target_title" />

        <LinearLayout
            android:id="@+id/exam_res"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="2.0dip"
            android:paddingLeft="30.0dip"
            android:paddingRight="30.0dip"
            android:paddingTop="10.0dip" >

            <TextView
                android:id="@+id/heart_position_1"
                style="@style/heart_count"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/health_heart_position"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/heart_position_2"
                style="@style/heart_count"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/health_heart_position"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/heart_position_3"
                style="@style/heart_count"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/health_heart_position"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/exam_res"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="30.0dip"
            android:paddingRight="30.0dip" >

            <TextView
                android:id="@+id/heart_desc_1"
                style="@style/heart_count"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@color/yellow"
                android:text="@string/heart_result_1" />

            <TextView
                android:id="@+id/heart_desc_2"
                style="@style/heart_count"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@color/yellow"
                android:text="@string/heart_result_2" />

            <TextView
                android:id="@+id/heart_desc_3"
                style="@style/heart_count"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@color/yellow"
                android:text="@string/heart_result_3" />
        </LinearLayout>

        <Button
            android:id="@+id/share_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25.0dip"
            android:layout_marginRight="35.0dip"
            android:layout_marginTop="30.0dip"
            android:gravity="center"
            android:text="分享"
            android:textColor="@drawable/black"
            android:textSize="10.0sp" >
        </Button>
    </LinearLayout>

</LinearLayout>