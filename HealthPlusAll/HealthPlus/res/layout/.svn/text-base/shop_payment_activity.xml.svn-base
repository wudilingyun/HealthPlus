<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res/com.vee.healthplus"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:orientation="vertical" >

    <com.vee.shop.ui.ShopHeaderView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:shopheaderLeftBtn="back"
        app:shopheaderRightBtn="none"
        app:shopheaderText="@string/hp_app_name" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <TableLayout
                    android:id="@+id/order_table"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shop_payment_order_info_bg"
                    android:paddingBottom="60.0dip"
                    android:shrinkColumns="1"
                    android:stretchColumns="1" >

                    <TextView
                        android:id="@+id/order_payment_tile"
                        style="@style/TextAppearance.Title.List"
                        android:layout_marginBottom="17.0dip"
                        android:layout_marginTop="17.0dip"
                        android:drawableLeft="@drawable/shop_payment_ok"
                        android:gravity="center"
                        android:text="@string/shop_order_suc_for_pay"
                        android:textColor="#ff8ebb54" />

                    <include layout="@layout/shop_horizontal_divider" />

                    <TableRow android:layout_marginTop="10.0dip" >

                        <TextView
                            style="@style/Widget.Item.Table"
                            android:gravity="left"
                            android:text="@string/shop_order_id" />

                        <TextView
                            android:id="@+id/order_id"
                            style="@style/Widget.Item.Table"
                            android:gravity="left" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            style="@style/Widget.Item.Table"
                            android:gravity="left"
                            android:text="@string/shop_order_recipient" />

                        <TextView
                            android:id="@+id/order_recipient"
                            style="@style/Widget.Item.Table"
                            android:gravity="left" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            style="@style/Widget.Item.Table"
                            android:gravity="left"
                            android:text="@string/shop_order_recipient_phone" />

                        <TextView
                            android:id="@+id/order_recipient_phone"
                            style="@style/Widget.Item.Table"
                            android:gravity="left" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            style="@style/Widget.Item.Table"
                            android:gravity="left"
                            android:text="@string/shop_order_detail_address" />

                        <TextView
                            android:id="@+id/order_detail_address"
                            style="@style/Widget.Item.Table"
                            android:gravity="left" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:id="@+id/order_delivery_time_title"
                            style="@style/Widget.Item.Table"
                            android:gravity="left"
                            android:text="@string/shop_order_delivery_time" />

                        <TextView
                            android:id="@+id/order_delivery_time"
                            style="@style/Widget.Item.Table"
                            android:gravity="left" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            style="@style/Widget.Item.Table"
                            android:gravity="left"
                            android:text="@string/shop_order_invoice_info" />

                        <TextView
                            android:id="@+id/order_invoice_info"
                            style="@style/Widget.Item.Table"
                            android:gravity="left" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            style="@style/Widget.Item.Table"
                            android:gravity="left"
                            android:text="@string/shop_order_fee" />

                        <TextView
                            android:id="@+id/order_fee"
                            style="@style/Widget.Item.Table"
                            android:gravity="left"
                            android:textColor="@color/highlight_text_color" />
                    </TableRow>
                </TableLayout>

                <LinearLayout
                    android:id="@+id/pay_action_container"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/list_item_padding" >

                    <TextView
                        style="@style/Widget.Item.ListView.Label"
                        android:layout_marginTop="7.0dip"
                        android:text="@string/shop_order_pyament_type"
                        android:visibility="gone" />

                    <Spinner
                        android:id="@+id/pay_type"
                        style="@style/Widget.Spinner"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/list_item_padding"
                        android:prompt="@string/shop_order_pyament_type"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/pay_btn"
                        style="@style/Widget.Button.Main"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:background="@color/healthplus_text"
                        android:text="@string/shop_order_pay" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>

</LinearLayout>