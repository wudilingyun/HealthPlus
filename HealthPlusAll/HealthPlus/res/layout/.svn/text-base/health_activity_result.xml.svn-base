<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/hp_main_padding_big" >

    <LinearLayout
        android:id="@+id/exam_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/hp_main_padding_bit" >

        <TextView
            android:id="@+id/exam_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="免疫力"
            android:maxEms="5"
            android:textColor="@color/blue_light"
            android:textSize="@dimen/hp_font_large_1" />

       <!--  <TextView
            android:id="@+id/exam_name_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            an
            android:text="@string/you_content"
            android:textColor="@color/blue_light"
            android:textSize="@dimen/hp_font_middle" /> -->
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="wrap_content"
        android:layout_height="0.8dp"
        android:background="@color/gray" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/exam_scores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/exam_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/health_exam_result_marging"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/result_desc_text_1"
                    style="@style/result_desc_text"
                    android:text="@string/you_score" />

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/blue"
                    android:textSize="@dimen/hp_font_middle" />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="5.0dip"
                android:text="    您的免疫力不错，疾病绕着您走，即使有点不舒服。也容易恢复。您关心自己的健康，精力充沛，很好！请继续保持！"
                android:textColor="@drawable/gray"
                android:textSize="@dimen/hp_font_middle_1" />

            <TextView
                android:id="@+id/text_divider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="@dimen/health_exam_result_marging"
                android:text="   建议:坚持运动"
                android:textColor="@drawable/gray"
                android:textSize="@dimen/hp_font_middle_1" />

            <TextView
                android:id="@+id/result_desc_text_2"
                style="@style/result_desc_text"
                android:text="@string/score_rule" />

            <LinearLayout
                android:id="@+id/exam_score_desc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/hp_main_padding_big"
                android:background="@drawable/myborder"
                android:orientation="vertical"
                android:padding="@dimen/hp_main_padding_small" >

                <TextView
                    android:id="@+id/text_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="1-9题回答是 &apos;是&apos;得1分，如果10-18题回答的是否，得1分，1-9题回答是 是得1分，如果10-18题回答的是否，得1分"
                    android:textColor="@drawable/gray"
                    android:textSize="@dimen/hp_font_middle_1"
                    android:visibility="gone" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/hp_main_padding_small" >

                    <TextView
                        android:id="@+id/currt_position_txt_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/result_bac_first"
                        android:gravity="center"
                        android:paddingBottom="@dimen/hp_main_padding_few"
                        android:text="@string/currt_position"
                        android:textColor="@drawable/white"
                        android:textSize="@dimen/hp_font_middle_1"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/currt_position_txt_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/result_bac_2"
                        android:gravity="center"
                        android:paddingBottom="@dimen/hp_main_padding_few"
                        android:text="@string/currt_position"
                        android:textColor="@drawable/white"
                        android:textSize="@dimen/hp_font_middle_1"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/currt_position_txt_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/result_bac_3"
                        android:gravity="center"
                        android:paddingBottom="@dimen/hp_main_padding_few"
                        android:text="@string/currt_position"
                        android:textColor="@drawable/white"
                        android:textSize="@dimen/hp_font_middle_1"
                        android:visibility="gone" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/exam_res"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/view1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/score_desc_1"
                            style="@style/score_desc"
                            android:layout_width="match_parent"
                            android:background="@color/yellow"
                            android:text="@string/currt_position" />

                        <View
                            android:id="@+id/view_divider_1"
                            style="@style/view_divider" />

                        <TextView
                            android:id="@+id/score_area_a"
                            style="@style/score_area"
                            android:text="" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/view2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/score_desc_2"
                            style="@style/score_desc"
                            android:layout_width="match_parent"
                            android:background="@drawable/SeaGreen1"
                            android:text="@string/currt_position" />

                        <View
                            android:id="@+id/view_divider_2"
                            style="@style/view_divider" />

                        <TextView
                            android:id="@+id/score_area_b"
                            style="@style/score_area"
                            android:text="7" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/view3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/score_desc_3"
                            android:layout_width="match_parent"
                            style="@style/score_desc"
                            android:background="@color/gray"
                            android:text="@string/currt_position" />

                        <View
                            android:id="@+id/view_divider_3"
                            style="@style/view_divider" />

                        <TextView
                            android:id="@+id/score_area_c"
                            style="@style/score_area"
                            android:text="13" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>