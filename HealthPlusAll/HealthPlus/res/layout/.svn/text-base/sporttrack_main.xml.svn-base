<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:paddingTop="10dp" >

        <Button
            android:id="@+id/finishsport_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@drawable/sportrack_finish_btn"
            android:paddingBottom="9dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="9dp"
            android:singleLine="true"
            android:text="完成"
            android:textColor="@color/hp_w_header_view_white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/pause_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@drawable/sportrack_pause_btn"
            android:paddingBottom="9dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="9dp"
            android:singleLine="true"
            android:textColor="@color/hp_w_header_view_white"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        >

        <TextView
            android:id="@+id/curmodel_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@drawable/hp_target_walkgray"
            android:gravity="bottom"
            android:text="距离目标还有2千米"
            android:textColor="@color/lightgray"
            android:textSize="14sp" 
            android:layout_marginBottom="5dp"
          />
         <com.vee.healthplus.ui.sporttrack.WatchCanvas
            xmlns:app="http://schemas.android.com/apk/res/com.vee.healthplus"
            android:id="@+id/watch"
            android:layout_width="wrap_content"
            android:layout_height="280dp"
           />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
             android:layout_marginTop="5dp" >

            <ImageView
                android:id="@+id/weatherimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true" 
              />

            <TextView
                android:id="@+id/weathertxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/weatherimg"
                android:textColor="@color/little_gray"
                android:paddingLeft="5dp"
               />

            <Button
                android:id="@+id/musicbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/sportrack_music_btn" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>