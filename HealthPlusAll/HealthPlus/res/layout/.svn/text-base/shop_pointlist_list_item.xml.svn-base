<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.Item.ListView.TrebleLine"
    android:background="@drawable/shop_list_item_bottom_bg"
    android:gravity="center_vertical" >

    <include
        android:id="@+id/action_divider"
        android:layout_width="fill_parent"
        android:layout_alignParentTop="true"
        layout="@layout/shop_horizontal_divider" />

    <ImageView
        android:id="@+id/point_list_item_photo"
        android:layout_width="@dimen/list_icon_size"
        android:layout_height="@dimen/list_icon_size"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:clickable="false"
        android:focusable="false"
        android:padding="4dp"
        android:scaleType="fitXY" />

    <LinearLayout
        android:id="@+id/point_list_item_center_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5.0dip"
        android:layout_toLeftOf="@+id/arrow_right"
        android:layout_toRightOf="@+id/point_list_item_photo"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                style="@style/TextAppearance.List.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="6.0dip"
                android:text="@string/order_list_time"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:id="@+id/point_list_item_time"
                style="@style/TextAppearance.List.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:maxLength="10"
                android:textSize="@dimen/text_size_normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/point_list_item_third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/point_list_price_title"
                style="@style/TextAppearance.List.Secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_list_fee"
                android:textSize="@dimen/text_size_normal"
                android:visibility="gone" />

            <TextView
                android:id="@+id/point_list_price"
                style="@style/TextAppearance.List.Secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5.0dip"
                android:textSize="@dimen/text_size_normal"
                android:visibility="gone" />

            <TextView
                android:id="@+id/point_list_title"
                style="@style/TextAppearance.List.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shop_point_list_title"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:id="@+id/point_list_status"
                style="@style/TextAppearance.List.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_normal" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/arrow_right"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="false"
        android:focusable="false"
        android:scaleType="centerInside"
        android:src="@drawable/shop_btn_next" />

</RelativeLayout>