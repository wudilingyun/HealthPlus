<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header_view_layout"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/headerviewbg" >

    <ImageView
        android:id="@+id/header_lbtn_img"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingBottom="3dp"
        android:paddingLeft="15dp"
        android:paddingRight="20dp"
        android:background="@drawable/shop_headview_back_button" />

<!--     <ImageView
        android:id="@+id/header_rbtn_img"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingBottom="3dp"
        android:paddingLeft="20dp"
        android:paddingRight="15dp"
        android:src="@drawable/hp_w_header_view_back" /> -->

    <LinearLayout
        android:id="@+id/header_rbtn_img"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true" >

        <FrameLayout
            android:id="@+id/title_bar_custom_view"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/shop_headview_cart" >

            <TextView
                android:id="@+id/shop_title_bar_shopping_count"
                style="@style/TextAppearance.Small.Inverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right|center"
                android:layout_marginRight="6.0dip"
                android:layout_marginTop="10.0dip"
                android:background="@drawable/shop_title_bar_shopping_cart_count"
                android:gravity="center"
                android:visibility="gone" />
        </FrameLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/header_text"
        style="@style/hp_w_header_title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingBottom="3dp" />

</RelativeLayout>