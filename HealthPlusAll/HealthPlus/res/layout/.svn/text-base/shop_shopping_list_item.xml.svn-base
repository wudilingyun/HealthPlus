<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.Item.ListView.DoubleLine" >

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shop_list_item_bottom_bg"
        android:paddingTop="0.0dip" >

        <include
            android:id="@+id/action_divider"
            android:layout_width="fill_parent"
            android:layout_alignParentTop="true"
            layout="@layout/shop_horizontal_divider" />

        <ImageView
            android:id="@+id/shopping_cartlist_photo"
            android:layout_width="@dimen/list_icon_size"
            android:layout_height="@dimen/list_icon_size"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5.0dip"
            android:padding="5dp"
            android:clickable="false"
            android:focusable="false"
            android:scaleType="fitXY" />

        <LinearLayout
            android:id="@+id/item_center_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20.0dip"
            android:layout_toLeftOf="@+id/arrow_right"
            android:layout_toRightOf="@+id/shopping_cartlist_photo"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/shopping_cartlist_text_title"
                style="@style/TextAppearance.List.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="@dimen/text_size_medium" />

            <TextView
                android:id="@+id/shopping_cartlist_text_center"
                style="@style/TextAppearance.Normal.Gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_normal" />
        </LinearLayout>

        <ImageView
            android:id="@+id/arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="false"
            android:focusable="false"
            android:scaleType="centerInside"
            android:src="@drawable/shop_btn_next" />
    </RelativeLayout>

</FrameLayout>