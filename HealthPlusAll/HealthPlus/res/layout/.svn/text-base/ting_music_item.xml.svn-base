<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llLocalItem"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dip"
    android:orientation="vertical" >

    <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="" 
            android:background="@color/line_light"/>
    
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:orientation="horizontal">
	    
	    <ImageView
	        android:id="@+id/music_item_image"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:paddingLeft="5px"
	        android:paddingRight="5px"
	        android:src="@drawable/list_item_icon" />
	
	    <LinearLayout
	        android:layout_width="142dp"
	        android:layout_height="72px"
	        android:layout_marginLeft="3dp"
	        android:layout_weight="0.30"
	        android:gravity="center_vertical"
	        android:orientation="vertical" >
		
	        <TextView
	            android:id="@+id/music_item_name"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:text="Song Name"
	            android:textColor="@color/listtext"
	            android:textSize="16dp"
	            android:textStyle="bold" />
	
	        <TextView
	            android:id="@+id/music_item_singer"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:layout_marginTop="5dip"
	            android:text="Singer"
	            android:textColor="@color/listsubtext"
	            android:textSize="12dp" />
	    </LinearLayout>
	
	    <TextView
	        android:id="@+id/music_item_time"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:paddingRight="10dp"
	        android:text="03:42"
	        android:textColor="@color/listsubtext" />
		
	    <ImageView
	        android:id="@+id/music_item_checked"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:background="@drawable/local_list_add"/>
	</LinearLayout>

	<TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="" 
            android:background="@color/line_dark"/>

</LinearLayout>