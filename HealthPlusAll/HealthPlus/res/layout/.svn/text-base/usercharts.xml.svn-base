<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:id="@+id/title_tv"
            android:textColor="@color/hp_w_target_week"
            android:text="@string/hp_userinfo_inputtodayweight" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_toRightOf="@+id/title_tv"
            android:layout_toLeftOf="@+id/save_btn"
            android:layout_marginLeft="5dp"
            android:background="@drawable/userregeditview"
            android:gravity="center">

            <EditText
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:inputType="number"
                android:background="@android:color/transparent"
                android:id="@+id/todayweight_et" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/hp_w_target_week"
                android:text="kg" />
        </LinearLayout>

        <Button
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:textColor="@color/white"
            android:text="@string/hp_userinfo_save"
            android:id="@+id/save_btn"
            android:layout_marginLeft="10dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/hp_w_target_setbtn_selector"
            android:layout_gravity="center_vertical" />
    </RelativeLayout>

    <com.vee.healthplus.widget.chart.LineChart
        android:id="@+id/weight_lc"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:background="@color/hp_w_userweightchart_bg" />

</LinearLayout>