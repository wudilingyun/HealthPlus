<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center" >

    <ImageView
        android:id="@+id/analysis_type_fake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/fake_dark"
        android:contentDescription="@string/app_name" />

    <ImageView
        android:id="@+id/analysis_type_fake_cover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/fake_cover"
        android:contentDescription="@string/app_name"
        android:visibility="invisible" />
    
    <TextView 
        android:id="@+id/analysis_type_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/analysis_type_fake"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:textColor="@color/analysis_text_dark"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        />

</RelativeLayout>