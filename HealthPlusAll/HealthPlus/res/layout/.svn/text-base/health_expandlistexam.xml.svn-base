<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:id="@+id/loading_examlist"
        layout="@layout/health_loading_data" />

    <LinearLayout
        android:id="@+id/exam_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/hp_main_padding_big"
        android:visibility="gone" >

        <TextView
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/health_exam_marging_bottom"
            android:gravity="left"
            android:paddingLeft="@dimen/health_main_padding_little"
            android:paddingRight="@dimen/health_main_padding_little"
            android:text="@string/exam_list_title"
            android:textColor="@color/blue"
            android:textSize="@dimen/hp_font_middle_1" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginBottom="@dimen/health_exam_marging_bottom"
            android:background="@color/blue"
            android:paddingLeft="@dimen/health_main_padding_little"
            android:paddingRight="@dimen/health_main_padding_little" />

        <ExpandableListView
            android:id="@+id/examtype_item"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/health_main_padding_little"
            android:layout_marginRight="@dimen/health_main_padding_little"
            android:layout_weight="1"
            android:cacheColorHint="@color/white"
            android:childDivider="@drawable/listview_line"
            android:childIndicatorLeft="0dp"
            android:divider="@drawable/list_item_divide_operate"
            android:groupIndicator="@null"
            android:listSelector="#00000000"
            android:paddingLeft="@dimen/health_main_padding_little"
            android:paddingRight="@dimen/health_main_padding_little" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginBottom="@dimen/health_exam_marging_bottom"
            android:background="@color/blue" />

        <TextView
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/health_exam_marging_bottom"
            android:gravity="left"
            android:text="@string/foot_hint"
            android:textColor="@color/blue"
            android:textSize="@dimen/health_textsize_3" />
    </LinearLayout>

</LinearLayout>