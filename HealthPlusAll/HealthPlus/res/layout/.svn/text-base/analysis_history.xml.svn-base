<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.vee.healthplus"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <com.vee.healthplus.widget.HeaderView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:gravity="center_vertical"
        app:headerLeftBtn="back"
        app:headerRightBtn="none"
        app:headerText="@string/hp_app_name" />

    <ListView
        android:id="@+id/analysis_history_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:divider="#ddddda"
        android:dividerHeight="1px"
        android:fadingEdge="none"
        android:listSelector="#00000000"
        android:scrollbars="none" >
    </ListView>

    <TextView
        android:id="@+id/analysis_history_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/analysis_history_note"
        android:textColor="@color/analysis_text_dark"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:visibility="gone" />

</LinearLayout>