<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
    <ImageView
        android:id="@+id/icon"
        style="@style/popup_menu_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/hp_main_padding_few" />

    <TextView
        android:id="@+id/title"
        style="@style/popup_menu_item_title"
        android:layout_width="wrap_content"
        android:layout_height="50.0dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/hp_main_padding_few"
        android:layout_toRightOf="@+id/icon"
        android:paddingLeft="5dp"
               android:textColor="@color/hp_w_target_titledes"
        android:textSize="20sp"/>
    
    <TextView
        android:id="@+id/content"
        style="@style/popup_menu_item_title"
        android:layout_width="wrap_content"
        android:layout_height="50.0dp"
        android:gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/hp_main_padding_few"
        android:textColor="@color/hp_w_target_week"
        android:textSize="20sp"
        />
</RelativeLayout>