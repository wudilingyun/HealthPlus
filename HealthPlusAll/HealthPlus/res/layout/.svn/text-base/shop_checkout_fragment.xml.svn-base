<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ScrollView
        android:id="@+id/container"
        style="@style/Widget.ScrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:id="@+id/checkout_info_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                style="@style/Widget.Item.ListView.Label"
                android:text="@string/shop_checkout_form_address_titie" />

            <RelativeLayout
                android:id="@+id/checkout_address_empty"
                style="@style/Widget.Item.ListView.SingleLine"
                android:background="@drawable/shop_list_item_single_bg_n"
                android:visibility="gone"
                android:gravity="center_vertical" >

                <TextView
                    style="@style/TextAppearance.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/shop_checkout_add_address" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:clickable="false"
                    android:focusable="false"
                    android:scaleType="centerInside"
                    android:src="@drawable/shop_btn_next" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/checkout_address"
                style="@style/Widget.Item.ListView.TrebleLine"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:background="@drawable/shop_list_item_single_bg"
                android:paddingBottom="10.0dip"
                android:paddingTop="10.0dip" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/address_right_arrow"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/checkout_address_up"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_medium" />

                    <TextView
                        android:id="@+id/checkout_address_middle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_medium" />

                    <TextView
                        android:id="@+id/checkout_address_bottom"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_medium" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/address_right_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:clickable="false"
                    android:focusable="false"
                    android:scaleType="centerInside"
                    android:src="@drawable/shop_btn_next" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/checkout_addr_mihome_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <EditText
                    android:id="@+id/checkout_addr_mihome"
                    style="@style/Widget.EditText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:inputType="none" />

                <EditText
                    android:id="@+id/checkout_addr_mihome_consignee"
                    style="@style/Widget.EditText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/list_item_padding"
                    android:hint="@string/shop_hint_address_consignee"
                    android:maxLength="15" />

                <EditText
                    android:id="@+id/checkout_addr_mihome_tel"
                    style="@style/Widget.EditText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/list_item_padding"
                    android:hint="@string/shop_hint_address_tel"
                    android:inputType="phone"
                    android:maxLength="11" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <TextView
                    style="@style/Widget.Item.ListView.Label"
                    android:text="@string/shop_checkout_form_payment_titie" />

                <RadioGroup
                    android:id="@+id/checkout_form_radiogroup_payment"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:checkedButton="@+id/checkout_form_radiogroup_payment_online" >

                    <RadioButton
                        android:id="@+id/checkout_form_radiogroup_payment_online"
                        android:text="@string/shop_checkout_form_payment_online" />

                    <RadioButton
                        android:id="@+id/checkout_form_radiogroup_payment_face"
                        android:text="@string/shop_checkout_form_payment_face"/>
                </RadioGroup>

                <RadioGroup
                    android:id="@+id/checkout_form_radiogroup_self"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" >
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/checkout_form_delivertime"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <TextView
                    style="@style/Widget.Item.ListView.Label"
                    android:text="@string/shop_checkout_form_delivertime_titie" />

                <RadioGroup
                    android:id="@+id/checkout_form_radiogroup_delivertime"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:checkedButton="@+id/checkout_form_radiogroup_delivertime_nolimit" >

                    <RadioButton
                        android:id="@+id/checkout_form_radiogroup_delivertime_nolimit"
                        android:text="@string/shop_checkout_form_delivertime_nolimit"
                        android:checked="true"  />

                    <RadioButton
                        android:id="@+id/checkout_form_radiogroup_delivertime_work"
                        android:text="@string/shop_checkout_form_delivertime_work" />

                    <RadioButton
                        android:id="@+id/checkout_form_radiogroup_delivertime_holiday"
                        android:text="@string/shop_checkout_form_delivertime_holiday" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <TextView
                    style="@style/Widget.Item.ListView.Label"
                    android:text="@string/shop_checkout_form_invoice_titie" />

                <RadioGroup
                    android:id="@+id/checkout_form_radiogroup_invoice"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:checkedButton="@+id/checkout_form_radiogroup_invoice_no" >

                    <RadioButton
                        android:id="@+id/checkout_form_radiogroup_invoice_no"
                        android:text="@string/shop_checkout_form_invoice_no" />

                    <RadioButton
                        android:id="@+id/checkout_form_radiogroup_invoice_person"
                        android:text="@string/shop_checkout_form_invoice_person" />

                    <RadioButton
                        android:id="@+id/checkout_form_radiogroup_invoice_company"
                        android:text="@string/shop_checkout_form_invoice_company" />
                </RadioGroup>

                <LinearLayout
                    android:id="@+id/checkout_form_invoice_title_bg"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:visibility="gone" >

                    <EditText
                        android:id="@+id/checkout_form_invoice_title"
                        style="@style/Widget.EditText"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/shop_checkout_form_invoice_edit_title" />
                </LinearLayout>

                <TextView
                    android:id="@+id/checkout_next"
                    style="@style/Widget.Button.Main"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="12.0dip"
                    android:layout_marginTop="32.0dip"
                    android:background="@color/healthplus_text"
                    android:text="@string/shop_checkout_next" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>